{
	"name": "simple-crud-api",
	"version": "1.0.0",
	"description": "A simple CRUD API",
	"keywords": [
		"API",
		"SIMPLE",
		"CRUD"
	],
	"homepage": "https://github.com/matheusdcunha/simple-crud-api#readme",
	"bugs": {
		"url": "https://github.com/matheusdcunha/simple-crud-api/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/matheusdcunha/simple-crud-api.git"
	},
	"license": "MIT",
	"author": "Matheus da Cunha",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"dev": "tsx watch --env-file .env src/server.ts",
		"seed": "tsx src/seed/seed.ts",
		"start": "node dist/server.cjs",
		"build": "tsup src",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"db:deploy": "npx prisma migrate deploy && npx prisma generate",
		"db:seed": "npx prisma db seed"
	},
	"prisma": {
		"seed": "node dist/seed/seed.cjs"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/bcryptjs": "2.4.6",
		"@types/node": "22.15.0",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "3.2.4",
		"prisma": "6.10.1",
		"tsup": "8.4.0",
		"tsx": "4.20.3",
		"typescript": "5.8.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4"
	},
	"dependencies": {
		"@fastify/cors": "11.1.0",
		"@fastify/swagger": "9.5.2",
		"@fastify/swagger-ui": "5.2.3",
		"@prisma/client": "6.18.0",
		"@scalar/fastify-api-reference": "1.38.1",
		"bcryptjs": "3.0.2",
		"dayjs": "1.11.18",
		"dotenv": "17.2.2",
		"fastify": "5.6.1",
		"fastify-type-provider-zod": "6.0.0",
		"zod": "4.1.11"
	}
}